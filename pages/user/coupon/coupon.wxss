/* pages/user/coupon/coupon.wxss */

.container {
  padding: 30rpx;
  background: #f9f9f9;
  box-sizing: border-box;
}

.list-box {
  width: 100%;
  height: 200rpx;
  background: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.list-box .boxt {
  width: 100%;
  height: 100rpx;
}

.boxt .money {
  width: 200rpx;
  height: 150rpx;
  line-height: 150rpx;
  text-align: center;
  color: #fff;
  background: #ffd200;
  font-size: 50rpx;
  float: left;
}

.box-main {
  width: 300rpx;
  height: 150rpx;
  float: left;
  margin-left: 20rpx;
}

.box-main .title {
  font-size: 40rpx;
  margin: 20rpx 0;
}

.box-main .describe {
  font-size: 30rpx;
  color: #a3a3a3;
}

.but {
  width: 150rpx;
  height: 150rpx;
  float: right;
}

.but button {
  margin-top: 110rpx;
  height: 40rpx;
  border-radius: 20rpx;
  color: #fff;
  background: #ffd200;
  font-size: 26rpx;
  line-height: 40rpx;
  width: 90%;
  border: none;
}

.but image {
  width: 100%;
  height: 100%;
  margin-top: -16rpx;
}

.list-box .condition {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  color: #666;
  text-indent: 20rpx;
  font-size: 32rpx;
}

.no-data {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.no-data image {
  margin-top: 200rpx;
  width: 80%;
}

.no-data .info-1 {
  color: #333;
  font-size: 36rpx;
}

.no-data .info-2 {
  color: #999;
  font-size: 24rpx;
}
