/* pages/user/code/code.wxss */
.codeBg{
  width: 100%;
  height: 600rpx;
  background: #fdda34;
  text-align: center;
}
.codeBg image{
  width: 400rpx;
  height: 400rpx;
  margin: 100rpx auto;
  border: solid #ccc 1rpx;
}
.bgimg{
  width: 100%;
  height: 122rpx;
  position: relative;
  top: -1rpx;
}
.title{
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 32rpx;
}
.mode{
  width: 100%;
  height: 400rpx;
  margin-top: 100rpx;
}
.mode .modeT{
  text-align: center;
  color: #999;
  font-size: 32rpx;
}
.modeT .line{
  width: 200rpx;
  height: 0;
  border-top: solid 1rpx #999;
  display: inline-block;
  margin: 10rpx;
}
.modeImg{
  width: 100%;
  height: 100rpx;
  text-align: center;
  margin: 50rpx 0;
}
.modeImg .circle{
  width: 60rpx;
  height: 60rpx;
  display: inline-block;
  border: #d2d2d2 solid 1rpx;
  border-radius: 50%;
  margin: 20rpx;
  padding: 20rpx;
}
.modeImg image{
  width: 100%;
  height: 100%;
  
}