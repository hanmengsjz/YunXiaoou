/* pages/user/royalty/royalty.wxss */
.head{
    width: 100%;
    height: 310rpx;
    background: #ffd200;
}
.head .money{
    color: #fff;
    font-size: 40rpx;
    text-align: center;
    padding: 110rpx 0 54rpx;
}
.head .cash, .head .buy{
    width: 160rpx;
    height: 60rpx;
    border-radius: 30rpx;
    line-height: 60rpx;
    text-align: center;
    font-size: 34rpx;
}
.head .btnBox{
    display: flex;
    justify-content: space-around;
}
.head .cash{
    border: 2rpx solid #fff;
    color: #fff;
}
.head .buy{
    color: #f2d030;
    background: #fff;
}
.conBox{
    border-radius: 8rpx;
    box-shadow: 0 0 4rpx #ccc;
    margin: 0 20rpx;
}
.tabBar{  
    display: flex;
    position: relative;
    top: -24rpx;
    z-index: 2;
    background: #fff;
}
.tabBox{
    padding: 17rpx;
    flex: 1;
}
.tabBox .tabTitle{
    font-size: 30rpx;
    color: #333;
    text-align: center;
}
.tabBox .tabInfo{
    font-size: 24rpx;
    color: #A3A3A3;
    text-align: center;
    margin-top: 26rpx;
}
.infoTitle{
    font-size: 34rpx;
    color: #333;
    padding: 26rpx 20rpx 10rpx;
}
.infoBox{
    height: 150rpx;
    padding: 26rpx 62rpx 10rpx 44rpx;
    box-sizing: border-box;
    width: 100%;
    flex: 1;
    flex-direction: column;
    border-bottom: 2rpx solid #ccc;
}
.infoBox .time{
    font-size: 34rpx;
    color: #666666;
}
.payBox{
    display: flex;
    justify-content: space-between;
    margin-top:20rpx; 
    width: 100%;
}
.payBox .form{
    font-size: 30rpx;
    color: #999999;
}
.payBox .pay{
    font-size: 30rpx;
    color: #333;
}