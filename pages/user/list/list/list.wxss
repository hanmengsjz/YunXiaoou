/* pages/user/list/list/list.wxss */
.bg{
  background: #f8f8f8;
}
.orderInfo{
  width: 100%;
  min-height: 300rpx;
  margin: 10rpx 0;
  background: #fff;
  box-sizing: border-box;
}
.OrderHeader{
  font-size:30rpx;
  width: 100%;
  height: 75rpx;
  box-sizing: border-box;
  padding: 10px 10rpx; 
}
.OrderHeader .orderNumber{
  color: #999999;
}
.OrderHeader .stata{
  float: right;
  margin-right: 20rpx;
}
.nubInfo{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: right;
  font-size: 30rpx;
  box-sizing: border-box;
  padding-right: 40rpx;
  margin-top: 10rpx;
  border-bottom: 1rpx solid #e5e5e5;
}
.buts{
  width: 100%;
  height: 100rpx;
  box-sizing: border-box;
  padding:20rpx;
}
.buts button{
  width: 180rpx;
  height: 60rpx;
  line-height: 60rpx;
  float: right;
  margin-right:20rpx; 
  padding: 0;
}
.buts .but1{
  color: #707070;
  border:1rpx solid #707070;
  background: #fff; 
}
.buts .but2{
  border: none;
  color: #fff;
}
.buts .but3{
  color: red;
  border:1rpx solid red;
  background: #fff; 
}
.no-data{
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #fff;
}
.no-data image{
  margin-top: 200rpx;
  width: 80%;
}
.no-data .info-1{
  color: #333333;
  font-size: 36rpx;
}
.no-data .info-2{
  color: #999999;
  font-size: 24rpx;
}
.load{
  color: #fff;
  background: #ffd200;
}
.not{
  text-align: center;
  color: #999;
}