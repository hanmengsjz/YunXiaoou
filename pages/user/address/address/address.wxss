/* pages/user/address/address/address.wxss */
.main{
  margin-bottom: 90rpx;
}
.cell{
  padding: 10rpx 40rpx;
  border-bottom: 2rpx solid #F2F2F2;
}
.cell .info{
  display: flex;
  justify-content: space-between;
}
.cell .name{
  color: #333333;
  font-size: 36rpx;
}
.cell .phone{
  color: #999999;
  font-size: 30rpx;
}
.cell .address{
  color: #666666;
  font-size: 30rpx;
  margin-top: 10rpx;
}
.toolbar{
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx;
}
.cell .checkbox{
  display: flex;
}
.cell .edit{
  display: flex;
  justify-content: space-around;
  color: #999999;
  font-size: 30rpx;
}
.cell .edit .delete{
  margin-left: 10rpx;
}
.no-address{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.no-address .img{
  padding: 100rpx 0 50rpx 0;
}
.no-address .img image{
  width: 489rpx;
  height: 401rpx;
}
.no-address .no-add{
  color: #333333;
  font-size: 36rpx;
}
.no-address .info{
  color: #999999;
  font-size: 24rpx;
}
.btn{
  position: fixed;
  bottom: 0;
  height: 88rpx;
  width: 100%;
  background: #FFD200;
  color: #fff;
  font-size: 36rpx;
  line-height: 88rpx;
  text-align: center;
}