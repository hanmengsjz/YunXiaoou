/* pages/car/order/order.wxss */

.address {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 20rpx 90rpx;
  background: #ffd200;
}

.address .cont {
  width: 100%;
}

.address .info {
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  color: #fff;
  padding: 0 10rpx;
}

.location {
  margin-top: 10rpx;
  color: #fff;
  font-size: 28rpx;
  padding: 0 10rpx;
}

.goods-list {
  position: relative;
  top: -60rpx;
  margin: 0 15rpx;
  background: #fff;
  border-radius: 30rpx;
  padding: 20rpx 30rpx;
  box-shadow: 0 4rpx 4rpx #ccc;
}

.goods-list .time {
  color: #999;
  font-size: 24rpx;
  text-align: right;
}

.goods-list .img {
  border-radius: 20rpx;
  width: 140rpx;
  height: 140rpx;
  overflow: hidden;
  margin-right: 20rpx;
}

.cont {
  width: 100%;
}

.goods-list .img image {
  width: 140rpx;
  height: 140rpx;
}

.goods-list .info {
  display: flex;
  margin-top: 20rpx;
}

.goods-list .name {
  color: #333;
  font-size: 30rpx;
}

.goods-list .descs {
  margin-top: 50rpx;
  display: flex;
  justify-content: space-between;
}

.goods-list .desc {
  color: #999;
  font-size: 24rpx;
}

.goods-list .count {
  color: #333;
  font-size: 24rpx;
}
.payment{
  width: 100%;
  height:150rpx;
  box-sizing: border-box;
  padding: 0 15rpx; 
  margin-top: 50rpx;
}
.payment .list-box{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  margin: 15rpx 0;
  font-size: 28rpx;
}
.list-box .list-img{
  width: 30rpx;
  height: 30rpx;
  margin: 15rpx;
  float: left;
}
.list-box text{
  height: 60rpx;
  line-height: 60rpx;
  float: left;
}
.list-box .choice{
  width: 40rpx;
  height: 40rpx;
  margin: 10rpx;
  float: right;
  background: #999;
  border-radius: 50%;
}
.choice image{
  width: 30rpx;
  height: 30rpx;
  margin: 6rpx;
}