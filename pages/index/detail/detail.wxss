/* pages/index/detail/detail.wxss */

page {
  background: #f9f9f9;
  padding-bottom: 100rpx;
}

.swiper {
  width: 100%;
  height: 500rpx;
}

.banner {
  width: 100%;
  height: 100%;
}
.banner image{
  display: block;
  width: 100%;
  height: 100%;
}

.old-price {
  font-size: 30rpx;
  color: #454545;
  text-decoration: line-through;
}

.info-box {
  width: 100%;
  box-shadow: 0 10rpx 10rpx #e6e6e6;
  padding: 20rpx 0 10rpx 40rpx;
  box-sizing: border-box;
}

.info-box .info {
  color: #333;
  font-size: 30rpx;
}

.info-box .price {
  color: #5d5d5d;
  font-size: 40rpx;
  margin-top: 4rpx;
}

.info-box .desc {
  color: #999;
  font-size: 22rpx;
  margin-top: 4rpx;
}

.count {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #fff;
  padding: 0 40rpx;
}

.count .title {
  color: #333;
  font-size: 30rpx;
}

.count-box {
  display: flex;
}

.step-class {
  width: 40rpx !important;
  height: 40rpx !important;
  border-radius: 50% !important;
  border: none !important;
}

.temperature {
  margin-top: 20rpx;
  background: #fff;
  padding: 0 40rpx;
}

.temperature .title {
  color: #333;
  font-size: 30rpx;
}

.temp-box {
  display: flex;
  margin: 10rpx 0;
  padding-bottom: 10rpx;
}

.temp-box .temp {
  margin-right: 20rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: #999;
  font-size: 26rpx;
  padding: 6rpx 16rpx;
  border: 2rpx solid #999;
  border-radius: 8rpx;
}

.temp-box .active {
  color: #f30002;
  border: 2rpx solid #f30002;
}

.mail .title {
  margin-top: 10rpx;
  font-size: 26rpx;
  color: #999;
  padding: 0 40rpx;
  height: 40rpx;
  line-height: 40rpx;
}

.info-img {
  width: 100%;
  margin-bottom: 100rpx;
}
