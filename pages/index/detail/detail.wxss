/* pages/index/detail/detail.wxss */

page {
  background: #f9f9f9;
}

.swiper {
  width: 100%;
  height: 462rpx;
}

.banner {
  width: 100%;
}

.banner image {
  width: 100%;
}

.info-box {
  width: 100%;
  box-shadow: 0 10rpx 10rpx #e6e6e6;
  padding: 20rpx 0 10rpx 40rpx;
  box-sizing: border-box;
}

.info-box .info {
  color: #333;
  font-size: 30rpx;
}

.info-box .price {
  color: #f30002;
  font-size: 40rpx;
  margin-top: 4rpx;
}

.info-box .desc {
  color: #999;
  font-size: 22rpx;
  margin-top: 4rpx;
}

.count {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #fff;
  padding: 0 40rpx;
}

.count .title {
  color: #333;
  font-size: 30rpx;
}

.count-box {
  display: flex;
}

.step-class {
  width: 40rpx !important;
  height: 40rpx !important;
  border-radius: 50% !important;
  border: none !important;
}

.temperature {
  margin-top: 20rpx;
  background: #fff;
  padding: 0 40rpx;
}

.temperature .title {
  color: #333;
  font-size: 30rpx;
}

.temp-box {
  display: flex;
  margin: 10rpx 0;
  padding-bottom: 10rpx;
}

.temp-box .temp {
  margin-right: 20rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: #999;
  font-size: 26rpx;
  padding: 0 10rpx;
  border: 2rpx solid #999;
  border-radius: 8rpx;
}

.temp-box .active {
  color: #f30002;
  border: 2rpx solid #f30002;
}

.mail .title {
  margin-top: 10rpx;
  font-size: 26rpx;
  color: #999;
  padding: 0 40rpx;
  height: 40rpx;
  line-height: 40rpx;
}

.info-img {
  width: 100%;
  margin-bottom: 88rpx;
}

.buy {
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  color: #fff;
  z-index: 999;
}

.buy .add-car {
  flex: 1;
  background: #ffd200;
}

.buy .buy-now {
  flex: 1;
  background: #f30002;
}
