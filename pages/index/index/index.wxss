/**index.wxss**/

page {
  padding-bottom: 100rpx;
}

.header {
  position: relative;
  overflow: hidden;
  height: 500rpx;
}

.header::after {
  position: absolute;
  left: 0;
  right: 0;
  bottom: -20rpx;
  content: '';
  z-index: 8;
  height: 40rpx;
  width: 100%;
  border-radius: 50%;
  background: #48d1cc;
}

.swiper {
  width: 100%;
  height: 100%;
}

.banner {
  width: 100%;
  height: 100%;
}

.banner image {
  display: block;
  width: 100%;
  height: 100%;
}

.class {
  display: flex;
  overflow: scroll;
  background: #48d1cc;
  box-sizing: border-box;
  flex-wrap: wrap;
}

.class-box {
  min-width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  margin: 20rpx 0;
}

.class-img {
  border-radius: 20rpx;
  height: 80rpx;
  width: 80rpx;
  overflow: hidden;
}

.class-img image {
  height: 100%;
  width: 100%;
}

.class-box .title {
  margin-top: 10rpx;
  font-size: 28rpx;
  color: rgb(27, 2, 2);
  text-align: center;
}

.recommend .title {
  position: relative;
  width: 100%;
}

.recommend .title image {
  width: 100%;
}

.goods-box {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx;
  justify-content: space-around;
  background: #48d1cc;
}

.goods {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-width: 280rpx;
  max-width: 100%;
  padding: 20rpx;
  margin: 20rpx 10rpx;
  background: #fff;
  border-radius: 20rpx;
  align-items: center;
}

.dan .goods-box .goods:first-child {
  min-width: 70%;
}

.goods .inner {
  width: 100%;
  max-width: 300rpx;
}

.width .goods {
  min-width: 70%;
}

.width .goods .inner {
  width: 70%;
  max-width: 100%;
}

.goods image {
  width: 100%;
}

.goods .name {
  font-size: 32rpx;
  color: #333;
}

.goods .info {
  font-size: 28rpx;
  color: #999;
}

.goods .buy {
  display: flex;
  justify-content: space-between;
}

.goods .price {
  font-size: 38rpx;
  color: #f30002;
}

.old-price {
  font-size: 30rpx;
  color: #454545;
  text-decoration: line-through;
}

.goods .car {
  display: flex;
  justify-content: center;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  align-items: center;
}

.count {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #fff;
  padding: 0 40rpx;
}

.count .title {
  color: #333;
  font-size: 30rpx;
}

.count-box {
  display: flex;
}

.step-class {
  width: 40rpx !important;
  height: 40rpx !important;
  border-radius: 50% !important;
  border: none !important;
}

.temperature {
  margin-top: 20rpx;
  background: #fff;
  padding: 0 40rpx;
}

.temperature .title {
  color: #333;
  font-size: 30rpx;
}

.temp-box {
  display: flex;
  margin: 10rpx 0;
  padding-bottom: 10rpx;
}

.temp-box .temp {
  margin-right: 20rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: #999;
  font-size: 26rpx;
  padding: 6rpx 16rpx;
  border: 2rpx solid #999;
  border-radius: 8rpx;
}

.temp-box .active {
  color: #f30002;
  border: 2rpx solid #f30002;
}

.buy-box {
  display: flex;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  color: #fff;
  z-index: 999;
  margin-top: 20rpx;
}

.buy-box .add-car {
  flex: 1;
  background: #ffd200;
}

.buy-box .buy-now {
  flex: 1;
  background: #f30002;
}

.pop-main {
  background: #fff;
  padding-top: 10rpx;
}

.pop-main .info {
  display: flex;
  padding: 0 40rpx;
}

.pop-main .info .img {
  width: 180rpx;
  height: 180rpx;
  border-radius: 18rpx;
  overflow: hidden;
}

.pop-main .info .img image {
  width: 100%;
}

.pop-main .info .title {
  padding-left: 20rpx;
}

.pop-main .info .price {
  margin-top: 20rpx;
  color: #f30002;
  font-size: 40rpx;
}

.pop-main .info .select {
  margin-top: 10rpx;
  font-size: 30rpx;
  color: #333;
}

.flex {
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  flex-wrap: wrap;
  width: 100%;
}

.kf_button {
  background-color: #fff;
  border: 0;
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
  box-shadow: 0 0 4rpx 4rpx #ddd;
  right: 20rpx;
  bottom: 120rpx;
  position: fixed;
  z-index: 99;
  text-align: center;
  line-height: 120rpx;
}
